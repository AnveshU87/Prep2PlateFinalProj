@model IEnumerable<Prep2Plate.Models.UserRecipe>

@{
    ViewBag.Title = "Index";
}

<h2>My Recipe</h2>


<table class="table">
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipeName)
        </th>
        <th>
            Add to Calendar
        </th>
    </tr>

    @foreach (var item in Model)
    {
       <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
           <td>
               @using (Html.BeginForm("Index", "UserRecipes"))
               {
                   <input type="submit" value="Add to Calendar" id="btnAdd" />
               }
           </td>
       </tr>
    }




