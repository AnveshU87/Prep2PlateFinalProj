@model Prep2Plate.Models.UserRecipe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>UserRecipe</h4>
    <hr />    
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
    
    <p/><p/>
    <p><b> @Html.DisplayNameFor(model => model.RecipeName) </b></p>
    <p>@Html.DisplayFor(model => model.RecipeName)</p>

    <p /><p />
    <img src="@Url.Content(Model.ImageUrl)" />
   
    <p/><p/>
    <p><b> @Html.DisplayNameFor(model => model.Ingredients) </b></p>
    @{
        var items = Json.Decode(Model.Ingredients); 
    }
    <ul>
        @foreach (var item in items)
        {
            <li>@item.ToString()</li>
        }    
    </ul>
    <a href="@Model.RecipeSourceUrl" target="_blank"><b>Click Here For More Recipe Details</b></a>
    <br/><br/>

</div>
